/* pages/weightManage/weightRecord/weightRecord.wxss */

.container {
  display: flex;
  flex-direction: column;
  position: absolute;
  bottom: 100rpx;
  left: 0;
  right: 0;
}

.container .info-panel {
  width: 100%;
  height: 48%;
}

.record-panel, .date-panel{
  position: absolute;
  width: 100%;
  height: 10%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx 50rpx 30rpx 120rpx;
}

.record-panel {
  top: 50%;
  z-index: 100;
}

.date-panel {
  top: 90%;
  z-index: 101;
}

.record-panel view {
  width: 50rpx;
  text-align: center;
  display: inline-flex;
  vertical-align: center;
}

.container .echarts-panel {
  width: 100%;
  height: 48%;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.UCenter-bg {
  background-color: #66cccc;
  background-size: cover;
  height: 70%;
  display: flex;
  justify-content: center;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

.cur-weight-content {
  display: flex;
  flex-direction: row;
  font-size: 120rpx;
  margin-left: 28rpx;
}

.UCenter-bg .text-xl {
  margin-top: 30rpx;
}